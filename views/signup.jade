extends layout
block content
    .container
        .row
            .col-md-6.col-md-offset-3
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Sign up
                    .panel-body
                        if errors && errors.length > 0
                            .alert.alert-danger
                                - each error in errors
                                    p=error
                        form(method='post')
                            .form-group
                                label(for='name') Name:
                                input#name.form-control(type='text',name="name",value=signUpUser.name)
                            .form-group
                                label(for='email') Email address:
                                input#email.form-control(type='email',name="email",value=signUpUser.email)
                            .form-group
                                label(for='pwd') Password:
                                input#pwd.form-control(type='password',name="password",value=signUpUser.password)
                            .form-group
                                label(for='confirmPwd') Confirm Password:
                                input#confirmPwd.form-control(type='password',name="confirmPwd",value=signUpUser.confirmPwd)
                            button.btn.btn-default(type='submit') Submit
