extends layout
block content
    .container
        .row
            .col-md-8.col-md-offset-2
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Make a new poll
                    .panel-body
                        if errors && errors.length > 0
                            .alert.alert-danger
                                - each error in errors
                                    p=error
                        form(method='post')
                            .form-group
                                label(for='title') Title:
                                input#title.form-control(type='text',name="title",value=poll.title)
                            .form-group
                                label(for='options') Options (separated by comma):
                                textarea#options.form-control(rows=5,name='options')=poll.options
                            button.btn.btn-default(type='submit') Submit
